<h2>Your Cart</h2>
<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |item| %>
      <li>
        <%= item.product.title %> - <%= item.quantity %> x <%= number_to_currency(item.product.price) %>
        <%= link_to 'Remove', remove_item_cart_path(item.product), method: :delete %>
      </li>
    <% end %>
  </ul>
  <p>Total: <%= number_to_currency(@cart_items.sum { |item| item.product.price * item.quantity }) %></p>
  <%= button_to 'Empty Cart', empty_cart_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
